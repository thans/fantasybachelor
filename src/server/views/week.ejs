<div id="week">
    <div id="lineup">
        <h3>your lineup</h3>
        <div class="lineupWrapper">
            <div class="bachelorWrapper">
                <div contestant contestant-id="33" multiplier="1"></div>
            </div>
            <div class="spacer"></div>
            <div class="selectionsWrapper">
                <div contestant
                     contestant-id="week.selectedContestants[i].id"
                     multiplier="!week.isScoresAvailable && week.selectedContestants[i].multiplier"
                     score="week.isScoresAvailable && week.selectedContestants[i].multiplier"
                     eliminated="isEliminated(week.selectedContestants[i])"
                     on-bio-click="week.selectedContestants[i] ? showSelectedContestantBio : null"
                     on-remove-click="!week.isScoresAvailable && week.selectedContestants[i] ? removeContestant : null"
                     ng-repeat="i in selectionRange"></div>
            </div>
        </div>
    </div>
    <div class="info" ng-show="week.isBeforeSelectionOpen">
        <div class="remainingTime">selection not open yet</div>
        <div class="instruction hoverable" ng-click="goToCurrentWeek()">go to current week</div>
    </div>
    <div class="info" ng-show="week.isSelectionOpen">
        <div class="remainingTime">selection closes at 8:00 PM</div>
        <!--<div class="remainingTime">selection closes in {{week.millisToClose | countdown}}</div>-->
        <div class="instruction">choose from the contestants below to fill your lineup</div>
    </div>
    <div class="info" ng-show="week.isShowInProgress">
        <div class="remainingTime">scores available at 10:00 PM</div>
        <!--<div class="remainingTime">scores available in {{week.millisToScoresAvailable | countdown}}</div>-->
        <div class="instruction">invite some friends over and watch the show</div>
    </div>
    <div class="info" ng-show="week.isScoresAvailable">
        <div class="remainingTime">you scored
            <ng-pluralize count="week.score"
                          when="{'0': 'no points',
                                 'one': '1 point',
                                 'other': '{} points'}">
            </ng-pluralize>
        </div>
        <div class="instruction hoverable" ng-click="goToCurrentWeek()">go to current week</div>
    </div>
    <div id="remainingContestants">
        <h3>remaining contestants</h3>
        <div contestant
             contestant-id="contestant.id"
             multiplier="!week.isScoresAvailable && contestant.multiplier"
             on-bio-click="showRemainingContestantBio"
             on-select-click="!week.isScoresAvailable && week.selectedContestants.length < week.numberOfSelections && selectContestant"
             ng-repeat="contestant in week.remainingContestants"></div>
    </div>
</div>